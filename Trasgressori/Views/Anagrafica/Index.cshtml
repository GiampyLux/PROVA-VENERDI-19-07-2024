@model IEnumerable<Trasgressori.Models.Anagrafica>

@{
    ViewData["Title"] = "Gestione Trasgressori";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Create", "Anagrafica")">Aggiungi Trasgressore</a></li>
                <li><a href="@Url.Action("Index", "TipoViolazione")">Gestione Violazioni</a></li>
                <li><a href="@Url.Action("Index", "Verbale")">Gestione Verbali</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h1>@ViewData["Title"]</h1>
        <table>
            <thead>
                <tr>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Indirizzo</th>
                    <th>Città</th>
                    <th>CAP</th>
                    <th>Codice Fiscale</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cognome</td>
                        <td>@item.Nome</td>
                        <td>@item.Indirizzo</td>
                        <td>@item.Città</td>
                        <td>@item.CAP</td>
                        <td>@item.Cod_Fisc</td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>
